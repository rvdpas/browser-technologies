<% include partials/head.ejs %>
    <div class="main">
        <h1>Create your own Grilled Cheese Sandwich!</h1>

        <div class="grilled-wrapper">
            <img src="../images/grilled-cheese-sandwich.jpg" alt="Grilled Cheese Sandwich" title="Grilled Cheese Sandwich">
        </div>

        <div class="shopping-list">
            <h2>Drag the ingredients to your shopping list</h2>

            <div class="grocerys">
                <div class="grocerys-wrapper">
                    <p>Drop your ingredients here</p>
                    <ul>
                        <% for (var i = 0; i < grocerys.length; i++) { %>
                            <li><%= grocerys[i] %></li>
                        <% } %>
                    </ul>

                    <a href="/empty">Clear items from list</a>
                </div>
            </div>

            <div class="ingredients">
                <form method="POST" action="/">
                    <fieldset class="ingredient">
                        <legend>Add bread to shopping list</legend>
                        <img id="0" draggable src="../images/bread.png" alt="Bread" title="Bread">
                        <input type="submit" value="Bread" name="grocery">
                    </fieldset>

                    <fieldset class="ingredient">
                        <legend>Add cheese to shopping list</legend>
                        <img id="1" draggable src="../images/cheese.png" alt="Cheese" title="Cheese">
                        <input type="submit" value="Cheese" name="grocery">
                    </fieldset>

                    <fieldset class="ingredient">
                        <legend>Add Ham to shopping list</legend>
                        <img id="2" draggable src="../images/ham.png" alt="Ham" title="Ham">
                        <input type="submit" value="Ham" name="grocery">
                    </fieldset>
                </form>
            </div>
        </div>
    </div>

<% include partials/footer.ejs %>
